<UserControl x:Class="UFO.Commander.VenueManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UFO.Commander"
             xmlns:test ="clr-namespace:UFO.Commander.ViewModel">
    <UserControl.Resources>
        <Style TargetType="{x:Type DataGridColumnHeader}">

        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1" x:Name="venueGrid" VerticalAlignment="Top" ItemsSource="{Binding Path=Venues}" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto"  AutoGenerateColumns="False" CanUserResizeColumns="True" SelectedItem="{Binding CurrentVenue}">
            <DataGrid.ContextMenu>
                <ContextMenu >
                    <MenuItem Header="Remove Venue" Command="{Binding Path=DeleteCommand}"  />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="1*" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Shortcut" Width="1*" Binding="{Binding ShortCut, Mode=TwoWay}"/>
                <DataGridTextColumn Header="Name" Width="6*" Binding="{Binding Name, Mode=TwoWay}"/>
                <DataGridTextColumn Header="Latitude" Width="1*" Binding="{Binding Latitude, Mode=TwoWay}"/>
                <DataGridTextColumn Header="Longitude" Width="1*" Binding="{Binding Longitude, Mode=TwoWay}"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DockPanel Background="GhostWhite">
                        
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="ID: " FontWeight="Bold" />
                            <TextBlock Text="{Binding Id}" Grid.Column="1" />
                            <TextBlock Text="Name: " FontWeight="Bold" Grid.Row="1" />
                            <TextBlock Text="{Binding Name}" Grid.Column="1" Grid.Row="1" />


                        </Grid>
                    </DockPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

        </DataGrid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" MaxHeight="25" Margin="5,0,0,0" Command="{Binding Path=AddCommand}">
                Add new Venue
            </Button>
            <Button Grid.Column="1" MaxHeight="25" Margin="5,0,0,0" IsEnabled="{Binding ElementName=venueGrid, Path=SelectedItems.Count}" Command="{Binding Path=DeleteCommand}">
                Delete Selected Venue
            </Button>
        </Grid>
    </Grid>
</UserControl>
